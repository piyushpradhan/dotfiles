# Toggling i3bar 
bindsym Mod1+b exec --no-startup-id /home/mediocre/.config/i3/scripts/i3bartoggle

# Adding polybar
exec_always --no-startup-id ~/.config/polybar/launch.sh

# adding gaps 
gaps inner 10
gaps outer 5

# sloppy focus
focus_follows_mouse no

