[module/music-prev]
type = custom/script
exec = echo "%{T4} ÔÅä "
format = <label>
click-left = playerctl previous -p $(playerctl -l)

[module/music-play-pause]
type = custom/ipc
active-player = playerctl -l
hook-0 = echo "%{T4}ÔÅå"
hook-1 = echo "%{T4}ÔÅã"
initial = 1
click-left = playerctl play-pause -p $(playerctl -l)

[module/music-next]
type = custom/script
exec = echo "%{T4} ÔÅé "
format = <label>
click-left = playerctl next -p $(playerctl -l)
